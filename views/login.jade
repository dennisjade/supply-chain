// Modal
#login-modal.modal.fade(role='dialog')
  .modal-dialog
    // Modal content
    .modal-content
      .modal-header.nav-background(style='padding:35px 50px;color:white;background-color:#106eb8;text-align:center')
        button.close(type='button', data-dismiss='modal') Ã—
        h4(style="font-size:40px;")
          span.glyphicon.glyphicon-lock
          |  Login
      .modal-body(style='padding:40px 50px;color:black;')
        form(role='form', action='/home')
          .form-group
            label(for='usrname')
              span.glyphicon.glyphicon-user
              |  Enter your IBM Id
            input#usrname.form-control(type='text', placeholder='Enter email')
          .form-group
            label(for='psw')
              span.glyphicon.glyphicon-eye-open
              |  Password
            input#psw.form-control(type='text', placeholder='Enter password')
          .checkbox
            label
              input(type='checkbox', value='', checked='')
              | Remember me
          button.btn.btn-primary.btn-block(type='submit')
            span.glyphicon.glyphicon-off
            |  Login
      .modal-footer
        button.btn.btn-danger.btn-default.pull-left(type='submit', data-dismiss='modal')
          span.glyphicon.glyphicon-remove
          |  Cancel
