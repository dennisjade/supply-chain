extends layout

block content
  .homepage-container.drawer.drawer--left
    include header
    include navigation

    #tco-page.container.container-table
      input(type="hidden", name="partNumber", value="#{partNumber}")
      input(type="hidden", name="classType", value="#{classType}")
      .row.vertical-center-row
        div(style='padding-top:60px')
          .row
              .col-md-8
                .row
                  .col-md-12.text-center
                    #container-tco(style="width:100%; height:400px;")
                  .col-md-12
                    div.tcoTable(style="padding-top:10px;padding-bottom:67px;")
                      div.spinner-center
                        span.glyphicon.glyphicon-refresh.glyphicon-spin
              .col-md-4(style="padding-top:22px")
                div.yesno-box.yesno-tco
                  div.spinner-center
                    span.glyphicon.glyphicon-refresh.glyphicon-spin
    include footer